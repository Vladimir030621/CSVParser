@model Employee

@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="PayrollNumber" class="control-label">PayrollNumber</label>
        <input type="text" asp-for="PayrollNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">DateOfBirth</label>
        <input type="text" asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telephone" class="control-label">Telephone</label>
        <input type="text" asp-for="Telephone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mobile" class="control-label">Mobile</label>
        <input type="number" asp-for="Mobile" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address2" class="control-label">Address2</label>
        <input type="text" asp-for="Address2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Postcode" class="control-label">Postcode</label>
        <input type="text" asp-for="Postcode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label">StartDate</label>
        <input type="text" asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>